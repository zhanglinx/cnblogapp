<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="textColorLight">@color/text_color_light</item>
        <item name="textColorDark">@color/text_color_dark</item>
        <item name="selectable_item_background_normal">@color/selectable_item_background_normal</item>
    </style>

  <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">@dimen/text_size_middle</item>
    <item name="textAllCaps">false</item>
  </style>

  <!--行内文本-->
  <style name="InlineText">
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:textColor">?attr/textColorLight</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <!--标题-->
  <style name="TitleText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/text_size_large</item>
    <item name="android:textColor">?attr/textColorDark</item>
    <item name="android:ellipsize">end</item>
  </style>
  <!--简介-->
  <style name="DescriptionText">
    <item name="android:textSize">@dimen/text_size_middle</item>
    <item name="android:textColor">?attr/textColorLight</item>
    <item name="android:maxLines">3</item>
    <item name="android:ellipsize">end</item>
    <item name="android:lineSpacingExtra">@dimen/dp5</item>
  </style>

  <style name="ItemStyle">
    <item name="android:background">@drawable/selector_divider</item>
    <item name="android:layout_marginLeft">24dp</item>
    <item name="android:layout_marginRight">24dp</item>
    <item name="android:paddingTop">18dp</item>
    <item name="android:paddingBottom">18dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:drawableRight">@mipmap/ic_arrow_right</item>
  </style>

</resources>
